  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="center fade_in <%= flash_class(key) %>">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= value %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
