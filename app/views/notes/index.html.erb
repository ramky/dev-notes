<p id="notice"><%= notice %></p>
<h1>Listing Notes for Topic "<%= @topic.name %>"</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.text %></td>
        <td><%= link_to 'Show', topic_note_path(@topic,note) %></td>
        <td><%= link_to 'Edit', edit_topic_note_path(@topic,note) %></td>
        <td><%= link_to 'Destroy', [@topic, note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_topic_note_path(@topic) %>
